<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:text="YELLOW"
        android:textColor="#000000"
        android:textColorHint="#972626"
        android:textSize="36sp"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue"
        app:layout_constraintVertical_bias="0.324"
        app:strokeColor="#100F0F"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_brown"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:text="BROWN"
        android:textColor="#000000"
        android:textColorHint="#972626"
        android:textSize="36sp"
        app:backgroundTint="#593A31"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow"
        app:layout_constraintVertical_bias="0.406"
        app:strokeColor="#100F0F"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:text="RESET"
        android:textColor="#000000"
        android:textSize="36sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green"
        app:layout_constraintVertical_bias="0.846"
        app:strokeColor="#000000"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:text="RED"
        android:textColor="#000000"
        android:textSize="36sp"
        app:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:strokeColor="#000000"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:text="GREEN"
        android:textColor="#000000"
        android:textColorHint="#972626"
        android:textSize="36sp"
        app:backgroundTint="#55F611"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue"
        app:layout_constraintVertical_bias="0.062"
        app:strokeColor="#100F0F"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="200dp"
        android:layout_height="98dp"
        android:text="BLUE"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="36sp"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red"
        app:layout_constraintVertical_bias="0.052"
        app:strokeColor="#000000"
        app:strokeWidth="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>